<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_lang_entity_form" model="ir.ui.view">
            <field name="name">lang_entity.form</field>
            <field name="model">my_module.lang_entity</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="LanguageCode"/>
                            <field name="LanguageName"/>
                            <field name="LanguageDesc"/>
                            <field name="status"/>
                            <field name="modifiedBy"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_lang_entity_tree" model="ir.ui.view">
            <field name="name">lang_entity.tree</field>
            <field name="model">my_module.lang_entity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="LanguageCode"/>
                    <field name="LanguageName"/>
                    <field name="status"/>
                    <field name="modifiedBy"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_lang_entity_search" model="ir.ui.view">
            <field name="name">lang_entity.search</field>
            <field name="model">my_module.lang_entity</field>
            <field name="arch" type="xml">
                <search>
                    <field name="LanguageCode"/>
                    <field name="LanguageName"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_lang_entity" model="ir.actions.act_window">
    <field name="name">Language Entities</field>
    <field name="res_model">my_module.lang_entity</field>
    <field name="view_mode">tree,form</field>
    <field name="target">current</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_lang_entity" name="Language Entities"/>
        <menuitem id="menu_lang_entity_list" name="Language List" parent="menu_lang_entity" action="action_lang_entity"/>
    </data>
</odoo>